<Window x:Class="Cairn.DirRightClick"
        WindowStyle="None"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Cairn"
        mc:Ignorable="d"
        Title="DirRightClick" Height="300" Width="200">
    <Grid>
        <ListBox Name="Actions" FontSize="14">
            <TextBlock Text="Copy" MouseLeftButtonUp="FilesCopy"/>
            <TextBlock Text="Rename" MouseLeftButtonUp="FilesRename"/>
            <TextBlock Text="Delete" MouseLeftButtonUp="FilesDelete"/>
        </ListBox> 
    </Grid>
</Window>
