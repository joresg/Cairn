<Window x:Class="Cairn.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Cairn"
        mc:Ignorable="d"
        Title="Cairn" Height="720" Width="1280">
    <Grid MouseRightButtonUp="GridRightClick">
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="20*"/>
        </Grid.RowDefinitions>
        <TextBlock Name ="DirFull" Grid.Row="0" HorizontalAlignment="Center" VerticalAlignment="Center" Text="{Binding DirName}"/>
        <Button Margin ="5,0,0,0" Grid.Row ="0" HorizontalAlignment="Left" VerticalAlignment="Center" Click="dirGoBack">back</Button>
        <ListBox Grid.Row ="1" Name="ListDir" SelectionMode="Extended">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <TextBlock FontSize="14" Text="{Binding DirName}" MouseLeftButtonUp="SelectDir" MouseRightButtonUp="SubdirRightClick"/>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
    </Grid>
</Window>