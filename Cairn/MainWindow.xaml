<Window x:Class="Cairn.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Cairn"
        mc:Ignorable="d"
        Title="Cairn" Height="720" Width="1280">
    <Grid>
        <ListBox Name="ListDir" SelectionMode="Extended">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding DirName}" MouseUp="SelectDir"/>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
        <Button HorizontalAlignment="Left" VerticalAlignment="Bottom" Click="dirGoBack">back</Button>
    </Grid>
</Window>