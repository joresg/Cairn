<Window x:Class="Cairn.GridRightClick"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Cairn"
        mc:Ignorable="d"
        WindowStyle="None"
        Title="GridRightClick" Height="450" Width="200">
    <Grid>
        <ListBox Name="Actions" FontSize="14">
            <TextBlock Text="New Folder" MouseLeftButtonUp="CreateDirectory"/>
        </ListBox>
    </Grid>
</Window>
